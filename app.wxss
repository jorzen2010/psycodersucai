/**app.wxss**/
page{
  background-color: #efefef;
}
.whitebg{
  background-color: #ffffff;
}
.head-title{
  font-size: 14pt;
  color: #353535;
}
.head-title-small{
  font-size: 10pt;
  line-height: 20pt;
  color: #888888;
}
.content-title{
  font-size: 12pt;
  line-height: 25pt;
  color: #353535;
  font-weight: 600;
}
.content-title-small{
  font-size: 10pt;
  line-height: 14pt;
  color: #888888;
}




.searchbox{
  border: 1px solid #efefef;
  height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #efefef;
  padding: 3px;
}
.search-img{
  height: 25px;
  width: 25px;
  border-radius: 5px 0px 0px 5px;
  background-color: #ffffff;
}
.searchinput{
  background-color: #ffffff;
  border-radius: 0px 5px 5px 0px;
  height: 25px;
  width: 100%;
}
.searchplaceholder{
  font-size: 12px;
  text-align: center;
}


/*列表样式开始*/
.listContainer{
  margin-top: 10px;
  display: flex;
  flex-direction: column;
}
.listContainer_title{
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  padding-top: 10px;
  padding-bottom: 10px;
}
.head-title{
  border-left: 5px solid #576b95;
  padding-left: 10px;
  font-weight: 600;
}
.head-title-small{
  padding-right: 10px;
}
.list_item{
  margin: 5px 5px 20px 5px;
  display: flex;
  flex-direction: row;
}
.list_item_img{
  width:80px;
  height:120px;
  border: 1px solid #cccccc;
  border-radius: 5% 5%;
}
.list_item_content{
    width: 100%;
  padding: 0px 5px 0px 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 120px;

}
.list_item_content_top{
  display: flex;
  flex-direction: column;
}
.list_item_content_bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #cccccc;
  font-size: 10pt;
}
.content-tags{
  background-color: #cccccc;
  color: #ffffff;
  font-size: 8pt;
  padding: 1px 2px 1px 2px;
  margin-right: 5px;
  border: 1px solid #cccccc;
  border-radius: 5000px;
}
/*列表样式结束*/