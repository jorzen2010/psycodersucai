.listcontainer{
  display: flex;
  flex-direction: column;
  margin: 10px 0px;
}
.list-item{
  display :flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px;
  margin: 0px;
  border-bottom: 1px solid #efefef;
}
.list-item-title{
  display: flex;
  flex-direction: row;
  justify-content: center;
  height: 25px;
}

.list-item-icon{
  height: 25px;
  width: 25px;
  padding: 0px;
  margin: 0px;
}
.list-item-text{
  color: #353535;
  padding-left: 15px;
}

.avatarcontainer{
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 5px solid #efefef;
}
.userinfo-userNickName{
  font-size: 14pt;
  font-weight: 600;
}
button::after{
  padding: 0px;
  border: 0px;
}
button{ 
  padding-top: 0px;
  background-color: #ffffff;
  font-size: 14pt;
  height: 25px;
}

.btnshare{
  line-height: 50px;
}