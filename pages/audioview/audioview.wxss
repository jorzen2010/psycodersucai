.audiocontainer{
   display: flex;
  flex-direction: column;
  background-color: #eeeeee;
  width: 100%;
  height:auto;
}

.audiobofangqi{
  background-color: #ffffff;
  padding-left: 5px;
  padding-right: 5px;
  
}

.audio_title{
  font-size: 14pt;
  font-weight: 800;
  color: #333333;
  padding-top: 5px;
  padding-bottom: 10px;
}
.audio_time{
  color: #cccccc;
  font-size: 9pt;
}
.bofangqi_cover_container{
  display: flex; 
  flex-direction: row;  
  justify-content: center;  
  width: 100%;
}
.bofangqi_cover{
  width:100%;
  height: 150px;
  padding: 0px;
  margin: 0px;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  opacity: 0.9; 
}
.bofangqibtn{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 20px;
  margin-bottom: 20px;

}
.audio_btn{
  width: 40px;
  height: 40px;
}


.audioinfo{
  margin-top: 10px;
  background-color: #ffffff;
  padding: 10px;
}
.audioinfo_title{
  font-size: 14pt;
  font-weight: 500;
  color: #333333;
  padding-bottom: 10px;
}
.audioinfo_content{
  font-size: 12px;
  line-height: 25px;
  color: #999999;
}