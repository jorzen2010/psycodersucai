.scollcontainer{
  margin-top: 0px;
  white-space: nowrap;
  width: 100%;
  display: flex;
  padding-top: 5px;
  padding-bottom: 5px;
  position: fixed;
  z-index: 999;
}
.scrollitem{
  width: 80px;
  height: 30px;
  margin: 3px;
  display: inline-block;
}

.scrollitem-img{
  width: 80px;
  height: 30px;
  border: 1px solid #cccccc;
  border-radius: 5px;
}
.toppaixu{
  padding:50px 5px 5px 5px;
  z-index: 998;
  position: fixed;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  border-bottom: 1px solid #efefef;
}
.toppaixu text{
  color: #bfbfbf;
  font-size: 10pt;
  padding-left: 5px;

}
.picker{
  margin-right: 20px;
  color: #bfbfbf;
  font-size: 10pt;
}
.picker image{
  width: 12px;
  height: 12px;
}


.listContainer{
  display: flex;
  flex-direction: column;
  padding-top: 80px;
  background-color: #fff;
}
.listContainer_title{
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  padding-top: 10px;
  padding-bottom: 10px;
}
.head-title{
  border-left: 5px solid #576b95;
  padding-left: 10px;
  font-weight: 600;
}
.head-title-small{
  padding-right: 10px;
}

.list_item{
  margin: 5px 5px 20px 5px;
  display: flex;
  flex-direction: row;
}
.list_item_img{
  width:80px;
  height:120px;
  border: 1px solid #cccccc;
  border-radius: 5% 5%;
}
.list_item_content{
    width: 100%;
  padding: 0px 5px 0px 10px;
  display: flex;
  flex-direction: column;
